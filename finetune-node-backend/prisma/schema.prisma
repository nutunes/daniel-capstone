generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String   @id @default(uuid())
  username            String   @unique
  hashedPassword      String
  spotifyRefreshToken String?
  displayName         String?
  songs               Song[]
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model Song {
  id         String @id @default(uuid())
  spotify_id String
  title      String
  users      User[]
}
